<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/transulentbg">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:id="@+id/headerRv"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_type"
            android:id="@+id/accountTypeTextView"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/whiteandblack"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="0dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:id="@+id/editBtn"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_edit_24"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/usernameLayout"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/usernameTextView"
            android:textColor="@color/whiteandblack"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/copyUsernameBtn"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/ic_baseline_content_copy_24"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:id="@+id/pwdLayout"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/whiteandblack"
            android:id="@+id/passwordTextView"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/showPasswordBtn"
            android:src="@drawable/ic_baseline_remove_red_eye_24"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copied to clipboard!"
        android:textStyle="bold"
        android:layout_marginVertical="5dp"
        android:id="@+id/copied"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>